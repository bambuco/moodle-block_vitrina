{{!
    @template block_vitrina/enrollcontainer

    This template renders the template content area for a resource.

    Example context (json):
    {}
}}

<div class="enroll-container">
    <div class="enroll-container-body{{#haspaymentgw}} haspaymentgw{{/haspaymentgw}}">
    {{#hasenrollmsg}}
        <div class="enroll-messages">
            {{#enrolmsg}}
                <div class="alert alert-danger">{{.}}</div>
            {{/enrolmsg}}
        </div>
    {{/hasenrollmsg}}
    {{#custom}}
        {{#enrolltitle}}<p>{{enrolltitle}}</p>{{/enrolltitle}}
        {{#enrollurl}}
            <a href="{{{enrollurl}}}" class="btn btn-primary">
                {{enrollurllabel}}
            </a>
        {{/enrollurl}}
        {{#enrollform}}
            <form class="enrollform type-{{enrol}}" action="{{{enrollformurl}}}" method="post">
                <input type="hidden" name="sesskey" value="{{{sesskey}}}">
                <input type="hidden" name="id" value="{{courseid}}">
                <input type="hidden" name="enroll" value="1">
                <input type="hidden" name="enroltype" value="{{enrol}}">
                <div class="enrollform-body">
                    <div class="enrollform-content">
                        {{{content}}}
                    </div>
                    <div class="enrollform-footer">
                        <button class="btn btn-primary" type="submit">
                            {{label}}
                        </button>
                    </div>
                </div>
            </form>
        {{/enrollform}}
        {{#requireauth}}
            <div class="requireauth">{{#str}} requireauth, block_vitrina, {{{requireauthurl}}} {{/str}}</div>
        {{/requireauth}}
        {{#haspaymentgw}}
            {{^requireauth}}
                {{#fee}}
                    <div class="feeinfo">
                        {{#str}} feeinfo, block_vitrina, {{formatedcost}} {{/str}}
                    </div>
                    {{#hascart}}
                        {{> block_vitrina/cartbutton}}
                    {{/hascart}}
                    {{^hascart}}
                        {{> block_vitrina/paymentbutton}}
                    {{/hascart}}
                {{/fee}}
            {{/requireauth}}
        {{/haspaymentgw}}

    {{/custom}}
    </div>
</div>
