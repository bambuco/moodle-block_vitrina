{{!
    @template block_vitrina/main

    This template renders the template content area for a resource.

    Example context (json):
    {}
}}

<div id="{{uniqueid}}" class="block_vitrina-content" data-observe-resizes>

    {{>block_vitrina/tabs}}

    <div class="courses tab-default block_vitrina-tabcontent active {{defaultstate}}">
        {{#courses}}
            {{>block_vitrina/course}}
        {{/courses}}
    </div>

    <div class="courses tab-recents block_vitrina-tabcontent {{recentsstate}}">
        {{#recentscourses}}
            {{>block_vitrina/course}}
        {{/recentscourses}}
    </div>

    <div class="courses tab-greats block_vitrina-tabcontent {{greatsstate}}">
        {{#greatcourses}}
            {{>block_vitrina/course}}
        {{/greatcourses}}
    </div>

    <div class="courses tab-premium block_vitrina-tabcontent {{premiumstate}}">
        {{#premiumcourses}}
            {{>block_vitrina/course}}
        {{/premiumcourses}}
    </div>

    <a href="{{baseurl}}/blocks/vitrina/" class="btn btn-primary btn-block">{{#str}}viewall, block_vitrina{{/str}}</a>

</div>