{{!
    @template block_vitrina/tabs

    This template renders the template content area for a resource.

    Example context (json):
    {
        "tabs": [{
            "title": "BambuCo",
            "text": "Ir a BambuCo",
            "icon": "globe"
        }],
        "baseurl": "https://moodle_wwwroot_url"
    }
}}

{{#hastabs}}
<div class="block_vitrina-tabs">

    {{#tabs}}
    <div data-ref="#{{uniqueid}} .tab-{{key}}" title="{{title}}" class="{{state}}">

        {{#showicon}}
            <i class="fa fa-{{icon}}"></i>
        {{/showicon}}

        {{#showtext}}
            <span>{{title}}</span>
        {{/showtext}}

    </div>
    {{/tabs}}

</div>
{{/hastabs}}