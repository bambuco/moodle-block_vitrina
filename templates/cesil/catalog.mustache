{{!
    @template block_vitrina/cesil/catalog

    This template renders the template content area for a resource.

    Example context (json):
    {}
}}

<div class="coursessearch-box">
    <form method="post">
        <input type="text" name="q" value="{{query}}" />
        <button>{{#pix}}i/search, core{{/pix}}</button>
        <input type="hidden" value="{{sort}}" />
    </form>
</div>
<div class="courses-sort sort-by-{{sort}}">
    <ul>
        <li><a href="?q={{query}}" data-sort="default">{{#str}}defaultsort, block_vitrina{{/str}}</a></li>
{{#premiumavailable}}
        <li><a href="?sort=premium&q={{query}}" data-sort="premium">{{#str}}premium, block_vitrina{{/str}}</a></li>
{{/premiumavailable}}
        <li><a href="?sort=recents&q={{query}}" data-sort="recents">{{#str}}recents, block_vitrina{{/str}}</a></li>
{{#rateavailable}}
        <li><a href="?sort=greats&q={{query}}" data-sort="greats">{{#str}}greats, block_vitrina{{/str}}</a></li>
{{/rateavailable}}
    </ul>
</div>
<div class="courses">
    {{#courses}}
        {{>block_vitrina/cesil/course}}
    {{/courses}}
</div>