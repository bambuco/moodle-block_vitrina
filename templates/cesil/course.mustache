{{!
    @template block_vitrina/cesil/course

    This template renders the template content area for a resource.

    Example context (json):
    {}
}}

<div class="panel panel-default coursebox coursecategory-{{category}} state-{{#active}}active{{/active}}{{^active}}waiting{{/active}} {{#premium}}type-premium{{/premium}}">
    <div class="panel-heading">
        <a class="" title="{{{shortname}}}" href="{{{baseurl}}}/blocks/vitrina/detail.php?id={{{id}}}">
            {{{fullname}}}
        </a>
    </div>
    <div class="panel-body clearfix">
        <div class="courseimage" {{#imagepath}}style="background-image: url({{imagepath}});"{{/imagepath}}></div>
        {{#hasrating}}
            {{#rating}}
            <div class="vitrina-ranking-stars">
                <div class="vitrina-ranking-stars-bar" style="width: {{percent}}%;"></div>
                {{#pix}}stars_empty, block_vitrina{{/pix}}
            </div>
            {{/rating}}
        {{/hasrating}}
        <div class="course-summary">
         {{{summary}}}
        </div>
        {{#fee}}
            <div class="coursefee">
                <div class="feeinfo">
                    {{#str}} feeinfoinlist, block_vitrina, {{formatedcost}} {{/str}}
                </div>
                {{#hascart}}
                    {{> block_vitrina/cartbutton}}
                {{/hascart}}
            </div>
        {{/fee}}
    </div>
    <div class="panel-foot clearfix">
        <a class="coursebtn submit btn btn-info btn-sm" href="{{{baseurl}}}/blocks/vitrina/detail.php?id={{{id}}}" target="_blank">
            <span class="get_stringlink">{{# str }} showmore, block_vitrina {{/ str }}</span>
        </a>
    </div>
    {{^active}}
        <div class="waiting-label">{{#str}}waiting, block_vitrina{{/str}}</div>
    {{/active}}
</div>
