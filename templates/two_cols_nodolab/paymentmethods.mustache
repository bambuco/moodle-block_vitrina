{{!
    @template block_vitrina/two_cols_nodolab/paymentmethods

    This template renders the template content for the payment methods collapse block.

    Example context (json):
    {}
}}

<p>
<button class="btn btn-primary collapsed" type="button" data-toggle="collapse" data-target="#paymentsCollapse" aria-expanded="false" aria-controls="paymentsCollapse">
    {{#str}}paymentmethods, block_vitrina {{/str}} <i class="icon fa fa-angle-down"></i>
</button>
</p>
<div class="collapse" id="paymentsCollapse">
    <div class="payments-content">
        <div class="payment-info">
            <p>{{#str}} paymentinfo, block_vitrina {{/str}}</p>
        </div>
        <div class="payment-methods">
        {{#enrollurl}}
            <a href="{{{enrollurl}}}" class="btn btn-primary" target="_blank">
                {{enrollurllabel}}
            </a>
        {{/enrollurl}}

        <a class="btn btn-primary"
                data-component="enrol_fee"
                data-action="core_payment/triggerPayment"
                data-paymentarea="fee"
                data-itemid="{{itemid}}"
                {{#successurl}}data-successurl="{{{successurl}}}"{{/successurl}}
                data-cost="{{formatedcost}}"
            data-name="{{originalcoursename}}"
            >
                {{label}}
        </a>
    </div>
</div>
</div>

