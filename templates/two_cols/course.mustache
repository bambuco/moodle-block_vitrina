{{!
    @template block_vitrina/two_cols/course

    This template renders the template content area for a resource.

    Example context (json):
    {}
}}

<div class="panel panel-default coursebox coursecategory-{{category}} state-{{#active}}active{{/active}}{{^active}}waiting{{/active}} {{#paymenturl}}type-premium{{/paymenturl}}">
    <div class="panel-body clearfix">
        <a class="" title="{{{shortname}}}" href="{{{baseurl}}}/blocks/vitrina/detail.php?id={{{id}}}" target="_blank">
            <div class="courseimage" {{#imagepath}}style="background-image: url({{imagepath}});"{{/imagepath}}></div>
        </a>
        <a  title="{{{shortname}}}" class="coursebtn submit btn btn-info btn-sm" href="{{{baseurl}}}/blocks/vitrina/detail.php?id={{{id}}}" target="_blank">
            {{{fullname}}}
        </a>
        <div class="coursesummary">
            {{{summary}}}
        </div>
        {{#fee}}
            <div class="coursefee">
                <div class="feeinfo">
                    {{#str}} feeinfoinlist, block_vitrina, {{formatedcost}} {{/str}}
                </div>
                {{#hascart}}
                    <a class="btn btn-primary"
                        data-component="enrol_fee"
                        data-action="local_buybee/addProduct"
                        data-reference="{{reference}}"
                        data-quantity="1"
                        data-formatedcost="{{formatedcost}}"
                        data-currency="{{currency}}"
                        data-cost="{{cost}}"
                        {{#imagepath}}
                            data-image="{{.}}"
                        {{/imagepath}}
                        data-name="{{originalcoursename}}"
                    >
                        {{#pix}} i/addtocart, local_buybee {{/pix}}
                        <span>{{#str}} labeladdproduct, local_buybee {{/str}}</span>
                    </a>
                {{/hascart}}
            </div>
        {{/fee}}
    </div>
    <div class="panel-foot clearfix">
        {{#hasrating}}
            {{#rating}}
            <div class="vitrina-ranking-stars">
                <div class="vitrina-ranking-stars-bar" style="width: {{percent}}%;"></div>
                {{#pix}}stars_empty, block_vitrina{{/pix}}
            </div>
            {{/rating}}
        {{/hasrating}}
    </div>
    {{^active}}
        <div class="waiting-label">{{#str}}waiting, block_vitrina{{/str}}</div>
    {{/active}}
</div>
